# Local filesystem mounting			-*- shell-script -*-

#
# This script overrides local_mount_root() in /scripts/local
#

. /scripts/local

rescue_shell() {
    busybox --install -s
    exec /bin/sh
}

local_mount_root()
{
	local_top
	local_device_setup "${ROOT}" "root file system"

	ROOT="${DEV}"
	local_premount

	modprobe squashfs || rescue_shell

	# mount the iso
	echo "mounting iso..."
	mkdir -p /run/iso /fs
	mount -t iso9660 /dev/sr0 /run/iso

	echo "setting up squashfs..."
	mount -t squashfs -o loop /run/iso/live.sq ${rootmnt} || rescue_shell

	echo "mounting /tmp..."
	mount -t tmpfs tmpfs ${rootmnt}/tmp || rescue_shell
}
